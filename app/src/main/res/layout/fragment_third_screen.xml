<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.onboarding.screens.FirstScreen">


    <ImageView
        android:id="@+id/onboardingone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/onboardingthree"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.34" />

    <TextView
        android:id="@+id/tv_reliable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:lineHeight="32sp"
        android:text="Reliable and simple."
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textFontWeight="800"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/onboardingone"
        app:layout_constraintStart_toStartOf="@+id/onboardingone"
        app:layout_constraintTop_toBottomOf="@+id/onboardingone" />

    <TextView
        android:id="@+id/tv_convenient_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="16dp"
        android:text="Create account, place order, confirm and GO!"
        android:textAlignment="center"
        android:textColor="#C8000000"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_reliable"
        app:layout_constraintStart_toStartOf="@+id/tv_reliable"
        app:layout_constraintTop_toBottomOf="@+id/tv_reliable" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/startBtn"
        android:layout_width="270dp"
        android:padding="4dp"
        android:textAllCaps="false"
        android:layout_height="wrap_content"
        android:layout_marginBottom="57dp"
        android:baselineAlignBottom="true"
        android:text="Letâ€™s get started!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>